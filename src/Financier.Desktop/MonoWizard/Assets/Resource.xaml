<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:ViewModel="clr-namespace:MonoWizard.ViewModel" 
                    xmlns:View="clr-namespace:MonoWizard.View">
    <DataTemplate DataType="{x:Type ViewModel:Page1ViewModel}">
        <View:Page1/>
    </DataTemplate>

    <DataTemplate DataType="{x:Type ViewModel:Page2ViewModel}">
        <View:Page2 />
    </DataTemplate>

    <Style TargetType="{x:Type Button}" x:Key="moveNextButtonStyle">
        <Setter Property="Content" Value="Next" />
        <Style.Triggers>
            <DataTrigger Binding="{Binding Path=IsOnLastPage}" Value="True">
                <Setter Property="Content" Value="Finish" />
            </DataTrigger>
        </Style.Triggers>
    </Style>

    <SolidColorBrush x:Key="WinBackgroundBrush" Color="#FFF0F0F0"/>
    <SolidColorBrush x:Key="WindowBackgroundBrush" Color="#FFF0F0F0"/>
</ResourceDictionary>