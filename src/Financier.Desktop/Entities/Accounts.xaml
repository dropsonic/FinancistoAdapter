<UserControl x:Class="Financier.Desktop.Entities.Accounts"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:convert="clr-namespace:Financier.Desktop.Converters"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <convert:AmountConverter x:Key="amount_converter"></convert:AmountConverter>
    </UserControl.Resources>
    <Grid>
        <DataGrid Margin="5" ItemsSource="{Binding Path=AccountsList}" AutoGenerateColumns="False">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Type" Binding="{Binding Path=Type}"></DataGridTextColumn>
                <DataGridTextColumn Header="Title" Binding="{Binding Path=Title}"></DataGridTextColumn>
                <DataGridTextColumn Header="Total Amount" Binding="{Binding Path=TotalAmount, Converter= {StaticResource amount_converter}}"></DataGridTextColumn>
                <DataGridTextColumn Header="Currency" Binding="{Binding Path=Currency.Name}"></DataGridTextColumn>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</UserControl>
