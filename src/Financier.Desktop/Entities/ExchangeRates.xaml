<UserControl x:Class="FinancierDesktop.Entities.ExchangeRates"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:FinancierDesktop.Entities"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <DataGrid Margin="5" ItemsSource="{Binding Path=ExchangeRatesList}" AutoGenerateColumns="False">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Date" Binding="{Binding Path=Date}"></DataGridTextColumn>
                <DataGridTextColumn Header="From" Binding="{Binding Path=FromCurrency}"></DataGridTextColumn>
                <DataGridTextColumn Header="To" Binding="{Binding Path=ToCurrency}"></DataGridTextColumn>
                <DataGridTextColumn Header="Rate" Binding="{Binding Path=Rate}"></DataGridTextColumn>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</UserControl>
